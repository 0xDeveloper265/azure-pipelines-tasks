{
    "id": "0EF70A38-3601-48B7-BF6A-8EFEF87EE23D",
	"name": "RunDistributedTests",
    "friendlyName": "Run Tests using Test Agents",
    "description": "Run Tests using Test Agents",
    "category": "Build",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0,
        "IsTest": false
    },
    "demands": [
    ],
    "inputs": [
        {
            "name": "environment",
            "type": "string",
            "label": "Test Environment",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The name of the environment on which tests need to be run."
        },
        {
            "name": "testassemblies",
            "type": "string",
            "label": "Test Assemblies",
            "defaultValue": "**\\*test*.dll;-:**\\obj\\**",
            "required": true,
            "helpMarkDown": "Search pattern for test assemblies"
        },
        {
            "name": "testFilterCriteria",
            "type": "string",
            "label": "Test Filter criteria",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Filter criteria for selecting test cases"
        },
        {
            "name": "runSettingsFile",
            "type": "filePath",
            "label": "Run Settings File",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Runsettings or testsettings file for test run"
        },
        {
            "name": "customAdapterPath",
            "type": "string",
            "label": "Path to Custom Test Adapters",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Path to custom test adapters to be used for running tests"
        }
    ],
    "instanceNameFormat": "Test assemblies $(testassemblies)",
    "execution": {
        "Process": {
            "target": "$(currentDirectory)\\Task.DTA.exe",
            "argumentFormat": "runtests /environment:$(environment) /sourcefilter:$(testassemblies) /testcasefilter:$(testFilterCriteria) /runsettings:$(runSettingsFile) /customadapter:$(customAdapterPath)",
            "workingDirectory": "$(currentDirectory)",
            "errorPattern": "$(errorPattern)",
            "warningPattern": "$(warningPattern)"
        }
    }
}