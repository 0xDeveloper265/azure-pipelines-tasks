{
    "id": "2A7EBC54-C13E-490E-81A5-D7561AB7CD97",
    "name": "PublishCodeCoverageResults",
    "friendlyName": "Publish Code Coverage Results",
    "description": "Publish code coverage results to VSO/TFS",
    "helpMarkDown": "[More Information](http://go.microsoft.com/fwlink/?LinkID=613718)",
    "category": "Test",
    "visibility": [
                "Preview",
                "Build"
                  ],    
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0
    },
    "demands" : [
    ],
    "minimumAgentVersion": "1.88.0",
    "groups": [        
    ],
    "instanceNameFormat": "Publish Code Coverage Results $(summaryFileLocation)",
    "inputs": [
        {
            "name": "codeCoverageTool",
            "type": "pickList",
            "label": "Code Coverage Tool",
            "required": false,
            "defaultValue": "JaCoCo",
            "helpMarkDown": "Select the tool with which summary files have been generated",
            "options": {
                "JaCoCo": "JaCoCo"
            }
        },
        {
            "name": "summaryFileLocation",
            "type": "string",
            "label": "Summary File",
            "defaultValue": "$(Build.Repository.LocalPath)\\my-app\\target\\site\\jacoco\\jacoco.xml",
            "required": true,
            "helpMarkDown": "Path of code coverage summary file"
        },
        {
            "name": "reportDirectory",
            "type": "string",
            "label": "Report Directory",
            "defaultValue": "$(Build.Repository.LocalPath)\\my-app\\target\\site\\jacoco",
            "required": true,
            "helpMarkDown": "Path of code coverage report directory"
        },
        {
            "name": "additionalCodeCoverageFiles",
            "type": "string",
            "label": "Additional files",
            "defaultValue": "$(Build.Repository.LocalPath)\\my-app\\target\\site\\**\\*.exec",
            "required": true,
            "helpMarkDown": "Regular expression specifying the additional code coverage files to be attached to build"
        }        
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\PublishCodeCoverageResults.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}