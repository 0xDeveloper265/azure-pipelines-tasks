{
    "id": "049918CB-1488-48EB-85E8-C318ECCAAA74",
    "name": "XamarinTestCloud",
    "friendlyName": "Xamarin Test Cloud",
    "description": "Test mobile apps with Xamarin Test Cloud",
    "category": "Build",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0,
        "IsTest": false
    },
    "demands": [
    ],
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "app",
            "type": "filePath",
            "label": "App",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Relative path from repo root of the app(s) to test.  Wildcards can be used.  For example, `**\\*.apk` for all apk files in all subfolders."
        },
        {
            "name": "testDir",
            "type": "filePath",
            "label": "Test Assemembly Directory",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Relative path to the folder that contains the test assemblies." 
        },
        {
            "name": "teamApiKey",
            "type": "string",
            "label": "Team API Key",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Xamarin Test Cloud Team API key."
        },
        {
            "name": "user",
            "type": "string",
            "label": "User Email",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "User name this test will run under.",
        },
        {
            "name": "devices",
            "type": "string",
            "label": "Devices",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Device IDs for Xamarin Test Cloud"
        },
        {
            "name": "series",
            "type": "string",
            "label": "Series",
            "defaultValue": "master",
            "required": true,
            "helpMarkDown": "Organize test runs by series (e.g. master, production, beta)."
        },
        {
            "name": "locale",
            "type": "pickList",
            "label": "System language",
            "defaultValue": "en_US",
            "required": true,
            "options": { 
                "en_US": "English (United States)",
                "ja_JP": "Japanese (Japan)"
            }
        },
        {
            "name": "appName",
            "type": "string",
            "label": "App Name",
            "defaultValue": "",
            "required": false,
            "groupName": "advanced"
        },
        {
            "name": "testCloudLocation",
            "type": "string",
            "label": "test-cloud Location",
            "defaultValue": "$(Agent.BuildDirectory)\\**\\tools\\test-cloud.exe",
            "required": true,
            "groupName": "advanced"
        }
    ],
    "instanceNameFormat": "Test Xamarin App $(app)",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\XamarinTestCloud.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}
