{
    "id": "333b11bd-d341-40d9-afcf-b32d5ce6f24b",
    "name": "NuGetPackager",
    "friendlyName": "NuGet Packager and Uploader",
    "description": "Installs and updates missing NuGet packages",
    "helpMarkDown": "[More Information](http://go.microsoft.com/fwlink/?LinkID=613747)",
    "category": "Package",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 17
    },
    "minimumAgentVersion": "1.83.0",
    "groups": [
        {
            "name":"advanced",
            "displayName":"Advanced",
            "isExpanded":false
        }
    ],    
    "instanceNameFormat": "NuGet restore $(solution)",
    "inputs": [
        {
            "name": "nuspecFile",
            "type": "filePath",
            "label": "Path to nuspec file",
            "defaultValue":"def.nuspec",
            "helpMarkDown": "The path to the nuspec file",
            "required":true
        },
        {
            "name": "nugetServer",
            "type": "string",
            "label": "NuGet Server Url",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Additional arguments passed to NuGet.exe restore."
        },
        {
            "name": "nugetServerKey",
            "type": "string",
            "label": "NuGet Server API Key",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Additional arguments passed to NuGet.exe restore."
        },
        {
            "name": "nuGetPath",
            "type": "string",
            "label": "Path to NuGet.exe",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Optionally supply the path to NuGet.exe",
            "groupName": "advanced"
        }

    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\NuGetPackager.ps1",
            "argumentFormat": "",
            "workingDirectory": ""
        }
    }
}