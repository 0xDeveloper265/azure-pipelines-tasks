{
    "id": "EF087383-EE5E-42C7-9A53-AB56C98420F9",
    "name": "VSTest",
    "friendlyName": "VSTest",
    "description": "Run tests with VS test runner",
    "category": "Build",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 2,
        "IsTest": false
    },
    "demands": [
        "vstest"
    ],
    "inputs": [
        { "name": "vsTestVersion", "type": "string", "label": "VSTest version", "defaultValue": "14.0", "required": false, "helpMarkDown": "Test binaries to run tests on.  Wildcards can be used.  For example, `**\\*test*.dll;-:**\\obj\\**` for all dlls with test in name while excluding files in any sub-directory named obj."},
        { "name": "testAssembly", "type": "filePath", "label": "Test Assembly", "defaultValue": "**\\*test*.dll;-:**\\obj\\**", "required": true, "helpMarkDown": "" },
        { "name": "testFiltercriteria", "type": "string", "label": "Test Filter criteria", "defaultValue": "", "required": false, "helpMarkDown": "" },
        { "name": "runSettingsFile", "type": "filePath", "label": "Run Settings File", "defaultValue": "", "required": false, "helpMarkDown": "" },
        { "name": "codeCoverageEnabled", "type": "boolean", "label": "Code Coverage Enabled", "defaultValue": "True", "required": false, "helpMarkDown": "" },
        { "name": "pathtoCustomTestAdapters", "type": "string", "label": "Path to Custom Test Adapters", "defaultValue": "", "required": false, "helpMarkDown": "" },
        { "name": "otherConsoleOptions", "type": "string", "label": "Other console options", "defaultValue": "", "required": false, "helpMarkDown": "" }
    ],
    "instanceNameFormat": "Test Assemblies $(testAssembly)",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\VSTest.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}
