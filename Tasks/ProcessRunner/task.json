{
    "id": "D9BAFED4-0B18-4F58-968D-86655B4D2CE9",
    "name": "ProcessRunner",
    "friendlyName": "Process Runner",
    "description": "Run an executable file",
    "category": "Utility",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 3,
        "IsTest": false
    },
    "demands": [
        "DotNetFramework"
    ],
    "inputs": [
        { "name": "filename", "type": "string", "label": "Path", "defaultValue": "", "required": true },
        { "name": "arguments", "type": "string", "label": "Arguments", "defaultValue": "", "required": false },
        { "name": "workingFolder", "type": "filePath", "label": "Working folder", "defaultValue": "", "required": true },
        { "name": "errorParttern", "type": "string", "label": "Error Parttern", "defaultValue": "", "required": false },
        { "name": "warningParttern", "type": "string", "label": "Warning Parttern", "defaultValue": "", "required": false }
    ],
    "instanceNameFormat": "Run $(filename)",
    "execution": {
        "Process": {
            "target": "$(filename)",
            "argumentFormat": "$(arguments)",
            "workingDirectory": "$(workingFolder)",
            "errorParttern": "$(errorParttern)",
            "warningParttern": "$(warningParttern)"
        }
    }
}