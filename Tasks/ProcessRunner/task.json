{
    "id": "D9BAFED4-0B18-4F58-968D-86655B4D2CE9",
    "name": "ProcessRunner",
    "friendlyName": "Process Runner",
    "description": "Run an executable file",
    "category": "Utility",
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 3,
        "IsTest": false
    },
    "groups": [
    {
      "name": "advanced",
      "displayName": "Advanced",
      "isExpanded": false
    }
    ],
    "inputs": [
        { 
            "name": "filename", 
            "type": "string", 
            "label": "Tool", 
            "defaultValue": "", 
            "required": true,
            "helpMarkDown": "Tool name to run.  Tool should be in path or resolvable via which.  Optionally, a fully qualified path can be supplied but that relies on that being present on the agent."
        },
        { 
            "name": "arguments", 
            "type": "string", 
            "label": "Arguments", 
            "defaultValue": "", 
            "required": false 
        },
        { 
            "name": "workingFolder", 
            "type": "filePath", 
            "label": "Working folder", 
            "defaultValue": "", 
            "required": true,
            "helpMarkDown": "Arguments passed to the tool",
            "groupName":"advanced"
        },
        { 
            "name": "errorPattern", 
            "type": "string", 
            "label": "Error Pattern", 
            "defaultValue": "", 
            "required": false,
            "helpMarkDown": "Optional regex to interpret output as an error.",
            "groupName":"advanced"
        },
        { 
            "name": "warningPattern", 
            "type": "string", 
            "label": 
            "Warning Pattern", 
            "defaultValue": "", 
            "required": false,
            "helpMarkDown": "Optional regex to interpret output as a warning.",
            "groupName":"advanced"
        }
    ],
    "instanceNameFormat": "Run $(filename)",
    "execution": {
        "Process": {
            "target": "$(filename)",
            "argumentFormat": "$(arguments)",
            "workingDirectory": "$(workingFolder)",
            "errorPattern": "$(errorPattern)",
            "warningPattern": "$(warningPattern)"
        },
        "JavaScript": {
            "target": "processRunner.js",
            "argumentFormat": ""
        }
    }
}